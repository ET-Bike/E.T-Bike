<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/myBikeListLL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" 
        android:background="@drawable/background_img"
        >

        <ListView
            android:id="@+id/myBikeLV"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        </ListView>
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/dealListLL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background_img"
         >

        <ListView
            android:id="@+id/myProfileDealLV"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        </ListView>
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/myJoinListLL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" 
        android:background="@drawable/background_img"
        >

        <ListView
            android:id="@+id/myProfileMyJoinLV"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        </ListView>
    </LinearLayout>
    
     <RelativeLayout
            android:id="@+id/myprofile_viewGroup"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp" >

            <com.paran.animation.demo.app.animation.PathButton
                android:id="@+id/myprofile_GoToHomePathBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/path_home_icon"
                android:visibility="visible" >
            </com.paran.animation.demo.app.animation.PathButton>

            <com.paran.animation.demo.app.animation.PathButton
                android:id="@+id/myprofile_SceneWithBikePathBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/path_scene_icon"
                android:visibility="visible" >
            </com.paran.animation.demo.app.animation.PathButton>

            <com.paran.animation.demo.app.animation.PathButton
                android:id="@+id/myprofile_RideWithMePathBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/path_ride_with_me_icon"
                android:visibility="visible" >
            </com.paran.animation.demo.app.animation.PathButton>

            <com.paran.animation.demo.app.animation.PathButton
                android:id="@+id/myprofile_ShareYourBikePathBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/path_share_your_bike_icon"
                android:visibility="visible" >
            </com.paran.animation.demo.app.animation.PathButton>

            <com.paran.animation.demo.app.animation.PathButton
                android:id="@+id/myprofile_thought"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/composer_thought"
                android:visibility="visible" >
            </com.paran.animation.demo.app.animation.PathButton>
 
            <com.paran.animation.demo.app.animation.PathButton
                android:id="@+id/myprofile_sleep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/composer_sleep"
                android:visibility="visible" >
            </com.paran.animation.demo.app.animation.PathButton>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:clickable="true"
                android:visibility="visible" >

                <Button
                    android:id="@+id/myprofile_plus_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/composer_button" >
                </Button>

                <ImageView
                    android:id="@+id/myprofile_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/composer_icn_plus" >
                </ImageView>
            </RelativeLayout>
        </RelativeLayout>

</FrameLayout>