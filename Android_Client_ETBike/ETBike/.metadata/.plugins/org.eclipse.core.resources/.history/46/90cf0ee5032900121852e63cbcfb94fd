package com.swmaestro.etbike.network;

import java.io.File;
import java.io.FileOutputStream;
import java.io.InputStream;
import java.net.HttpURLConnection;
import java.net.URL;

import android.os.Handler;
import android.util.Log;

public class DownLoadThread extends Thread {
	
	String TAG = "DownloadThread";
	String downloadUrl;
	String path;
	
	Handler mHandler;
	
	public static final int STATE_DOWNLOAD_SUCCESS = 1;
	public static final int STATE_DOWNLOAD_FAIL = 0;
	
	public void DownloadThread(String downloadUrl, String path, Handler mHandler) {
		this.downloadUrl = downloadUrl;
		this.path = path;
		this.mHandler = mHandler;
		
	}
	
	
	public void run() {
		File file = new File(path);
		if(downloadImage(downloadUrl, file)) {
			
		}
		
	}
	
	private boolean downloadImage(String downloadUrl, File path) {

		int read;

		try {
			URL url = new URL(downloadUrl);
			HttpURLConnection conn = (HttpURLConnection) url.openConnection();
			int len = conn.getContentLength();
			byte[] bt = new byte[len];
			InputStream is = conn.getInputStream();
			FileOutputStream fos = new FileOutputStream(path);

			while (true) {
				read = is.read(bt);
				if (read <= 0)
					break;
				fos.write(bt, 0, read);
			}

			is.close();
			fos.close();
			conn.disconnect();
		} catch (Exception e) {
			Log.e(TAG, e.getMessage());
			return false;
		}

		return true;
	}

}
